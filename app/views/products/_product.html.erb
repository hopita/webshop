<tr>
  <td><%= product.brand %></td>
  <td><%= product.category %></td>
  <td><%= product.name %></td>
  <td><%= product.description %></td>
  <td><%= product.price %></td>
  <td class="show"><%= link_to 'Show', product %></td>
  <td class="edit"><%= link_to 'Edit', edit_product_path(product) %></td>
  <td class="destroy"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>